{
  "functions": {
    "api/og.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    { 
      "source": "/tour/:slug*",
      "destination": "/api/og"
    },
    { 
      "source": "/(.*)", 
      "destination": "/" 
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "cleanUrls": false,
  "trailingSlash": false
}